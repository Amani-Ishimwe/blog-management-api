<script> 
    function showCommentCard(){
    var commentCard = document.getElementById("comment-card");
    commentCard.style.display = "block";
    var blurBackground = document.getElementById("blur-background");
    blurBackground.style.filter = "blur(5px)";   
    //commentCard.scrollIntoView({ behavior: 'smooth' });
}
    function hideCommentCard(){
        var commentCard = document.getElementById("comment-card");
        commentCard.style.display = "none";
        var blurBackground = document.getElementById("blur-background");
        blurBackground.style.filter = "none";
    }
    function toggleText(button) {
        var cardId = button.getAttribute('data-id'); // Get card number from data-id
        var fullText = document.getElementById('fullText' + cardId);
        var readMoreBtn = button;

        // Toggle visibility of full text
        if (fullText.style.display === "none") {
            fullText.style.display = "block"; // Show the full text
            readMoreBtn.textContent = "Read Less"; // Change button text to Read Less
        } else {
            fullText.style.display = "none"; // Hide the full text
            readMoreBtn.textContent = "Read More"; // Reset button text to Read More
        }
    }
</script>

